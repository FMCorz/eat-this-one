extends layout

block content
    div(ng-controller='indexController', class='container')

        include top

        form(role='form')
            eat-field(element='where')

            eat-datetime(element='when', toggle-date='toggleDatepicker($event)', toggle-time='toggleTimepicker($event)')
            timepicker(ng-model='when.value', ng-show='showTimepicker', show-meridian='false')
            datepicker(ng-model='when.value', ng-show='showDatepicker', class='well well-sm')
            button(type='button', name='search', ng-click='searchDish()', class='btn btn-primary') {{lang.searchdish}}
            button(type='button', name='add', ng-click='addDish()', class='btn btn-primary') {{lang.adddish}}

include footer
