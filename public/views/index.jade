extends layout

block content
    div(ng-controller='IndexController', class='container')

        include top

        div(ng-if='!auth.isAuthenticated()')
            blockquote
                p
                    {{lang.infowelcome}}

            div(id='id-authenticate', ng-if='!auth.isAuthenticated()')
                button(type='button', ng-click='authorizeGoogle()', class='btn btn-primary')
                    span(class='glyphicon glyphicon-log-in button-icon')
                    {{lang.signingoogle}}

        div(ng-if='auth.isAuthenticated()')
            div(class='centered-container')
                button(type='button', name='add', ng-click='addDish()', class='btn btn-primary')
                    span(class='glyphicon glyphicon-share button-icon')
                    {{lang.adddish}}
                button(type='button', name='meals', ng-click='indexMeals()', class='btn btn-primary')
                    span(class='glyphicon glyphicon-cutlery button-icon')
                    {{lang.mymeals}}

            div(class='container dishes-list')
                div(ng-show='showNoDishes')
                    p {{lang.nodishes}}
                table(ng-show='!showNoDishes', class='table table-hover')
                    tr
                        td {{lang.dishname}}
                        td {{lang.dishdescription}}
                        td {{lang.when}}
                    tr(ng-repeat='dish in dishes', class='dish')
                        td
                            a(href='dishes/view.html?id={{dish._id}}') {{dish.name}}
                        td
                            a(href='dishes/view.html?id={{dish._id}}') {{dish.description}}
                        td
                            a(href='dishes/view.html?id={{dish._id}}') {{dish.when}}

include footer
