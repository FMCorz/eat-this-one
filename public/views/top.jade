div(id='id-mask', class='mask')

md-toolbar
    div(class='md-toolbar-tools')
        md-button(ng-click='toggleMenu()', ng-if='showToggleMenu', aria-label='{{lang.menu}}')
            span(class='glyphicon glyphicon-menu-hamburger', aria-hidden='true')
        span {{pageTitle}}
        span(flex)
        div(ng-repeat='actionIcon in actionIcons')
            md-button(ng-click='redirectAction(this, actionIcon.callback)', ng-if='showToggleMenu', aria-label='{{actionIcon.name}}')
                span(class='{{actionIcon.icon}}', aria-hidden='true')
