doctype html
html
    head
        //- Delegated to the extension.
        //- This block CAN specify a different base for all paths (see base tag).
        block base

        //- Delegated to the extension.
        //- This block MUST define the controller name (controllerName var).
        block configuration

        //- All the scripts + styles includes.
        include head

    body(id='id-body', ng-app='eat-this-one')

        //- Here we use controllerName var to set the page JS controller.
        div(ng-controller='#{controllerName}')

            //- The user menu. Only available when the controller set icons on it.
            md-sidenav(ng-if='showToggleMenu && menuIcons', class='md-sidenav-left sidenav-short', md-component-id='menu')
                md-toolbar
                    h1(class='md-toolbar-tools') {{lang.menu}}
                md-list(role='list', layout='column', layout-fill)
                    md-item(ng-repeat='menuIcon in menuIcons', role='listitem')
                        md-button(ng-click='redirectAction(this, menuIcon.callback)', class='menu-item', aria-label='{{menuIcon.name}}')
                            md-inline-list-icon
                            span(class='{{menuIcon.icon}} button-icon big-icon')
                            span(class='md-inline-list-icon-label', aria-hidden='true') {{menuIcon.name}}

            //- Main content container.
            md-content

                //- Page heading
                md-toolbar
                    div(class='md-toolbar-tools no-toolbar-padding')

                        //- The menu is only available when the controller specifies it.
                        div(class='md-tile-left')
                            md-button(ng-click='menu.toggle()', ng-if='showToggleMenu && menuIcons', aria-label='{{lang.menu}}', class='md-primary md-fab no-box-shadow')
                                span(class='glyphicon glyphicon-menu-hamburger', aria-hidden='true')
                        div(class='md-tile-content')
                            span {{pageTitle}}
                            span(flex)

                        //- Action buttons. The controller sets them.
                        div(ng-repeat='actionIcon in actionIcons')
                            md-button(ng-click='redirectAction(this, actionIcon.callback)', ng-if='showToggleMenu', aria-label='{{actionIcon.name}}', class='md-primary md-fab no-box-shadow')
                                span(class='{{actionIcon.icon}}', aria-hidden='true')

                //- Delegated to the specific view logic.
                md-content(id='id-contents', class='md-padding')
                    //- Delegated to the extension.
                    block logic

    include footer
