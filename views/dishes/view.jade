// This template requires dish object to be set in $scope
//

extends ../layout

block content
    div(ng-controller='dishesViewController', class='container')

        include ../top

        div(id='id-dish-info')
            p {{dish.name}}
            p {{dish.description}}
            p {{dish.where}}
            p {{dish.from}}
            p {{dish.to}}
            p {{dish.nportions}}
            p {{dish.donation}} {{dish.currency}}
        div(id='id-add-meal-form')
            form(role='form')
                div(class='form-group')
                    label(for='id-user') {{lang.user}}
                    input(type='text', name='user', ng-model='meal.user', id='id-user', class='form-control', placeholder='{{lang.user}}')
                div(class='form-group')
                    label(for='id-portions') {{lang.portions}}
                    select(name='portions', ng-model='meal.portions', id='id-portions', class='form-control')
                        option(ng-repeat='i in dish.nportions', value='{{i}}') {{i}}
                button(type='button', name='meal', ng-click='addMeal()', class='btn btn-primary') {{lang.addmeal}}

include ../footer
